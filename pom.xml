<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <organization>
    <name>GATHERing</name>
    <url>http://www.gatherdata.org</url>
  </organization>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.gatherdata</groupId>
  <artifactId>gather-common</artifactId>
  <version>1.0-SNAPSHOT</version>

  <name>gather-common (feature)</name>

  <description>The common infrastructure for GATHER applications.</description>

  <properties>
    <gather.common.version>1.0-SNAPSHOT</gather.common.version>
    <org.osgi.service.http.port>8080</org.osgi.service.http.port>
    <org.osgi.service.http.port.secure>8443</org.osgi.service.http.port.secure>
  </properties>

  <packaging>pom</packaging>

  <repositories>
    <repository>
      <id>org.ops4j</id>
      <name>OPS4J Maven Repository</name>
      <url>http://repository.ops4j.org/maven2/</url>
    </repository>
    <repository>
      <id>ops4j.snapshots</id>
      <url>http://repository.ops4j.org/mvn-snapshots/</url>
      <releases>
        <enabled>false</enabled>
      </releases>
    </repository>
    <repository>
      <id>com.springsource.repository.bundles.release</id>
      <name>SpringSource Enterprise Bundle Repository - SpringSource Bundle Releases</name>
      <url>http://repository.springsource.com/maven/bundles/release</url>
    </repository>
    <repository>
      <id>com.springsource.repository.bundles.external</id>
      <name>SpringSource Enterprise Bundle Repository - External Bundle Releases</name>
      <url>http://repository.springsource.com/maven/bundles/external</url>
    </repository>
  </repositories>

  <modules>
    <module>poms</module>
    <module>provision</module>
    <module>org.gatherdata.core</module>
    <module>org.gatherdata.mock</module>
    <module>org.gatherdata.workflow</module>
    <module>org.gatherdata.http</module>
    <module>org.gatherdata.db.hsqldb</module>
    <module>org.gatherdata.core.jpa</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <groupId>org.ops4j</groupId>
        <artifactId>maven-pax-plugin</artifactId>
        <version>1.4</version>
        <configuration>
          <provision>
            <param>--platform=felix</param>
            <param>--profiles=logging</param>
          </provision>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <!-- integration testing profile -->
    <profile>
      <id>iandt</id>
      <activation>
        <property>
          <name>env-test</name>
        </property>
      </activation>
      <modules>
        <module>integration-tests</module>
      </modules>
    </profile>
  </profiles>

</project>
